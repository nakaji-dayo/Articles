	body
		div
			div.yui3-g
				div.yui3-u-1
					div.head
						h1
							a(href="/") Articles
			div.yui3-g
				div.yui3-u-3-4
					div.content
						!= body
				div.yui3-u-1-4
					div.side
						h2 profile
						ul
							li daishi nakajima
							li
								a(href="http://twitter.com/#!/nakaji_dayo", target="_blank") @nakaji_dayo
						h2 updates
						ul
							- updates.forEach(function(update){
								li 
									a(href="/#{update.url}") #{update.title}
							-});
						h2 tags
						ul
							- tags.forEach(function(tag){
								li
									a(href="/search?tag=#{tag._id}") #{tag._id}(#{tag.value})
							- });
						h2 admin
						-if(user){
							p hello #{user}
							ul
								li 
									a(href="/new") post new article
								-if(typeof(doc)!="undefined"){
									li
										a(href="/edit/#{doc.url}") edit /#{doc.url}
								-}
						-}else{
							a(href="/login/twitter") login with twitter
						-}
			div.yui3-g
				div.yui3-u-1
					div.foot
